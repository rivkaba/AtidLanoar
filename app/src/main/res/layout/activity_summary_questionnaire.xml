<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Summary_questionnaire"
    android:background="@drawable/pi">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="363dp"
        android:layout_height="79dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="שאלון סיכום שנה - תוכנית &quot;עתיד לנוער&quot; "
        android:textSize="30sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/linear_buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/Scroll_view_questionnaire"
        android:layout_width="334dp"
        android:layout_height="462dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="חניכות וחניכי מנהיגות עסקית צעירה תוכנית עתיד לנוער שלום רב,
שנת הפעילות הסתיימה ולנו חשוב להבין ממכם מהם הנקודות לשימור והנקודות לשיפור.
בפניכם שאלון קצר הנוגע לתכנים השונים בהם עסקתם בתוכנית.
אנא קראו את השאלות וענו בהתאם לתחושותיכם.
זכרו, השאלון אנונימי ואין תשובות נכונות ולא נכונות. אתם מתבקשים לענות את התשובה הכי נכונה עבורכם. "
                android:textSize="25sp" />

            <Button
                android:id="@+id/questionnair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:gravity="center"
                android:onClick="questionnair"
                android:text="לשאלון"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="OnClick" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linear_buttons"
        android:layout_width="377dp"
        android:layout_height="86dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view">

        <Button
            android:id="@+id/p4"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:enabled="false"
            android:text="ד'"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="29dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="24dp"
            app:srcCompat="?attr/homeAsUpIndicator" />

        <Button
            android:id="@+id/p3"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="16dp"
            android:enabled="false"
            android:text="ג'"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="29dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="24dp"
            app:srcCompat="?attr/homeAsUpIndicator" />

        <Button
            android:id="@+id/p2"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="16dp"
            android:enabled="false"
            android:onClick="P2"
            android:text="ב'"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="29dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="24dp"
            app:srcCompat="?attr/homeAsUpIndicator" />

        <Button
            android:id="@+id/p1"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="16dp"
            android:onClick="P1"
            android:text="א'"
            android:textSize="22sp"
            tools:ignore="OnClick" />
    </LinearLayout>

<!--q1-->
    <ScrollView
        android:id="@+id/Scroll_view_questionnaire_1"
        android:layout_width="334dp"
        android:layout_height="389dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_buttons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="חלק א'"
                android:textSize="25sp"></TextView>

            <TextView
                android:id="@+id/gender"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="מגדר"
                android:textSize="25sp" />

            <RadioGroup
                android:layout_width="248dp"
                android:layout_height="wrap_content"
                android:gravity="right"

                >

                <RadioButton
                    android:id="@+id/q110"
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked1"
                    android:text="זכר"
                    android:textSize="22sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <RadioButton
                    android:id="@+id/q111"
                    android:layout_width="122dp"
                    android:layout_height="match_parent"
                    android:onClick="onRadioButtonClicked1"
                    android:text="נקבה"
                    android:textSize="22sp" />


                <RadioButton
                    android:id="@+id/q112"
                    android:layout_width="122dp"
                    android:layout_height="40dp"
                    android:onClick="onRadioButtonClicked1"
                    android:text="אחר"
                    android:textSize="22sp" />
            </RadioGroup>

            <EditText
                android:id="@+id/q113"
                android:layout_width="198dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="22sp"
                android:visibility="invisible" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="right"
                android:orientation="horizontal">

                <SeekBar
                    android:id="@+id/q11"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:max="20"
                    android:min="12" />

                <TextView
                    android:id="@+id/age"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="24dp"
                    android:text="גיל"
                    android:textSize="22sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/agee"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="24dp"
                    android:text="10"
                    android:textSize="22sp" />
            </LinearLayout>

            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:onClick="save"
                android:text="שמירה"
                android:textSize="25sp" />


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
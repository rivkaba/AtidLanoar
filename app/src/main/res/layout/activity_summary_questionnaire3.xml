<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Summary_questionnaire_3"
    android:background="@drawable/pi" >

    <TextView
        android:id="@+id/text_view"
        android:layout_width="365dp"
        android:layout_height="74dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="שאלון סיכום שנה - תוכנית &quot;עתיד לנוער&quot; "
        android:textSize="30sp"
        android:gravity="center"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear_buttons"
        android:layout_width="384dp"
        android:layout_height="86dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view">

        <Button
            android:id="@+id/p4"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:enabled="false"
            android:onClick="P4"
            android:text="ד'"
            android:textSize="22sp"
            tools:ignore="OnClick" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="29dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="24dp"
            app:srcCompat="?attr/homeAsUpIndicator" />

        <Button
            android:id="@+id/p3"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="16dp"
            android:onClick="P3"
            android:text="ג'"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="29dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="24dp"
            app:srcCompat="?attr/homeAsUpIndicator" />

        <Button
            android:id="@+id/p2"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="16dp"
            android:onClick="P2"
            android:text="ב'"
            android:textSize="22dp" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="29dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="24dp"
            app:srcCompat="?attr/homeAsUpIndicator" />

        <Button
            android:id="@+id/p1"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="16dp"
            android:onClick="P1"
            android:text="א'"
            android:textSize="22sp"
            tools:ignore="OnClick" />
    </LinearLayout>
   <!--p3-->
    <ScrollView
        android:id="@+id/Scroll_view_questionnaire_3"
        android:layout_width="340dp"
        android:layout_height="400dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_buttons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="חלק ג'"
                android:textSize="25sp"></TextView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="עד כמה את/ה מרגיש/ה שאת/ה יודעת על כל אחד מהנושאים הבאים? "
                android:textSize="25sp" />

            <Space
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/qq31"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="קורות חיים "
                android:textSize="25sp" />

            <RatingBar
                android:id="@+id/q31"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1" />

            <TextView
                android:id="@+id/qq32"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="ראיון עבודה "
                android:textSize="25sp" />

            <RatingBar
                android:id="@+id/q32"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1" />

            <TextView
                android:id="@+id/qq33"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="כתיבת תוכנית עסקית "
                android:textSize="25sp" />

            <RatingBar
                android:id="@+id/q33"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1" />

            <TextView
                android:id="@+id/qq34"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="תכנון גאנט עבודה "
                android:textSize="25sp" />

            <RatingBar
                android:id="@+id/q34"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1" />

            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:onClick="save"
                android:text="שמירה"
                android:textSize="25sp" />
        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>